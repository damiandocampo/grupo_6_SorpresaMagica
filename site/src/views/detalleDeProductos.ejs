          <div class="conteinerDetalle">
            <section class="price">
              <div>
                <h1>
                  <%= product.title %>
                </h1>
              </div>

              <% if (product.discount> 0) { %>
                <div class="precio">
                  <small>
                    $<%= product.price %>
                  </small>
                  <h2>
                    $<%= finalPrice(product.price, product.discount) %>
                  </h2>
                  <h3>
                    <%= product.discount %>%
                  </h3>
                </div>
                <% } else { %>
                  <p>$ <%= product.price %>
                  </p>
                  <% } %>

            </section>

            <div class="rayas"> </div>

            <section class="cantidad">
              <div class="cant">
                <span>Cantidad</span>
              </div>

              <div class="numeber">
                <p>1</p>
              </div>

              <div class="angle">
                <i class="fas fa-angle-right"></i>
              </div>
            </section>

            <section>
              <button class="agregar">AGREGAR AL CARRITO</button>
            </section>

            <section class="CP">
              <div class="postal">

                <SPan>Tu c√≥digo postal</SPan>

                <button class="calcular">Calcular</button>
              </div>
            </section>
          </div>
          <div class="rayas"> </div>
          <section class="fondo">
            <section class="descripcion">
              <h2>Descripcion</h2>
              <p>
                <%= product.description %>
              </p>
            </section>
            <div>
              <h2>PRODUCTOS RELACIONADOS</h2>
            </div>
            <section class="productosRelacionados">
              <% relatedProducts.forEach(product=> { %>
                <article>
                  <img src="/images/productos/<%= product.image %> " alt="imagen1" />
                  <h6>
                    <%= product.brand.name %>
                  </h6>
                  <h3>
                    <%= product.title %> <br> 55gr
                  </h3>
                  <% if (product.discount> 0) { %>
                    <div class="precio">
                      <small>
                        $<%= product.price %>
                      </small>
                      <h2>
                        $<%= finalPrice(product.price, product.discount) %>
                      </h2>
                      <h3>
                        <%= product.discount %>%
                      </h3>
                    </div>
                    <% } else { %>
                      <span class="precio">
                        $ <%= product.price %>
                      </span>
                      <% } %>
                        <div>
                          <button>-</button>
                          <p>1</p>
                          <button>+</button>
                        </div>
                        <button class="agregar2">AGREGAR AL CARRITO</button>
                </article>
                <% }) %>

        </main>
